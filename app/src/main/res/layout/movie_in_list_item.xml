<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_item_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:outlineProvider="bounds"
    android:padding="10dp">

    <ImageView
        android:id="@+id/movie_item_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/movie_icon_note" />

    <TextView
        android:id="@+id/movie_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/movie_top_margin"
        android:layout_marginLeft="@dimen/movie_side_margin"
        android:layout_marginRight="@dimen/movie_side_margin"
        android:ellipsize="end"
        android:textAppearance="@style/TitleTextAppearance"
        app:layout_constraintLeft_toRightOf="@id/movie_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/movie_item_icon"
        tools:text="Title" />

    <TextView
        android:id="@+id/movie_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/movie_side_margin"
        android:layout_marginRight="@dimen/movie_side_margin"
        android:layout_marginTop="@dimen/movie_top_margin"
        android:textAppearance="@style/SubtitleTextAppearance"
        app:layout_constraintLeft_toRightOf="@id/movie_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_item_title"
        tools:text="Subtitle" />

    <TextView
        android:id="@+id/movie_item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/movie_side_margin"
        android:layout_marginTop="@dimen/movie_top_margin"
        android:textAppearance="@style/DateTextAppearance"
        app:layout_constraintLeft_toRightOf="@id/movie_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_item_subtitle"
        tools:text="20-08-2018" />

</android.support.constraint.ConstraintLayout>